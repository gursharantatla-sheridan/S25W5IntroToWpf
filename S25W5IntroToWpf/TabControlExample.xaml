<Window x:Class="S25W5IntroToWpf.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S25W5IntroToWpf"
        mc:Ignorable="d"
        Title="TabControlExample" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personal Info">
                <Canvas>
                    <Label Content="Label" Canvas.Left="77" Canvas.Top="56"/>
                    <TextBox Canvas.Left="137" TextWrapping="Wrap" Text="TextBox" Canvas.Top="69" Width="120"/>
                    <Label Content="Label" Canvas.Left="96" Canvas.Top="145"/>
                    <TextBox Canvas.Left="173" TextWrapping="Wrap" Text="TextBox" Canvas.Top="158" Width="120"/>
                </Canvas>
            </TabItem>
            <TabItem Header="Address">
                <StackPanel>
                    <CheckBox Content="CheckBox"/>
                    <CheckBox Content="CheckBox"/>
                    <CheckBox Content="CheckBox"/>

                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
